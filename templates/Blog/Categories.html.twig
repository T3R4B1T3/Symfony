<h1>Categories: </h1>
<a href="formC" style="border: none"><p>Add new Category</p></a>
<table style="border-collapse: collapse">
    {% for categories in categories %}
          <tr style="text-align: left">
                <th style="border: 2px solid ">Name</th>
                <th style="border: 2px solid ">Description</th>
                <th style="border: 2px solid ">Created_AT</th>
                <th style="border: 2px solid ">Created_By</th>
          </tr>
          <tr style="text-align: center">

             <td style="border: 2px solid ">{{ categories.name}}</td>
             <td style="border: 2px solid ">{{ categories.description}}</td>
             <td style="border: 2px solid ">{{ categories.CreatedAt | date('d/m/Y H:i:s' )}}</td>
             <td style="border: 2px solid ">{{ categories.CreatedBy}}</td>

          </tr>

    {% endfor%}
</table>
